            <Button x:Name="ShowSettingsBtn" Content="settings" Click="ShowSettingsBtn_Click" />
            <Button x:Name="HelpBtn" Content="?" Click="HelpBtn_Click"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.WindowCommands>

